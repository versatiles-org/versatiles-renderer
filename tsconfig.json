{
	"compilerOptions": {
		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}